@model ExternalLoginConfirmationViewModel


<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<form role="form" asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" asp-area="" class="login100-form validate-form">

				<span class="login100-form-title p-b-43">
					<h2 class="login-title">Register</h2>
					<h4 class="fs-16 mt-3 mb-0">Associate your @ViewData["ProviderDisplayName"] account.</h4>
					<p class="fs-12 fw-light text-muted mt-3 mb-0">
						You've successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>.
						Please enter a user name for this site below and click the Register button to finish
						logging in.
					</p>
				</span>

				<div class="fw-light fs-14 text-danger text-center my-2" asp-validation-summary="All"></div>

				<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
					<input class="input100" asp-for="Email">
					<span class="focus-input100"></span>
				</div>

				<div class="container-login100-form-btn">
					<button class="login100-form-btn" type="submit">
						Register
					</button>
				</div>
			</form>
		</div>
	</div>
</div>




@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
